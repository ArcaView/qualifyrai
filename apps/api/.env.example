
# App Configuration
APP_ENV=development
APP_SECRET=your-secret-key-here-change-in-production
API_VERSION=0.1.0

# Rate Limiting
API_RATE_RPM=60
API_RATE_BURST=120

# File Upload Limits
MAX_FILE_MB=5
MAX_PAGES=12

# Timeouts (seconds)
PARSE_TIMEOUT_S=5
SCORE_TIMEOUT_S=3
LLM_TIMEOUT_S=10

# Database (PostgreSQL)
# Use DATABASE_URL for SQLAlchemy connection
# For Supabase: Use direct connection (port 5432) for better compatibility
# Example: postgresql+psycopg://user:password@host:5432/postgres
DATABASE_URL=postgresql+psycopg://user:password@localhost:5432/parsescore
# Legacy variable (not used)
# POSTGRES_URL=postgresql://user:password@localhost:5432/parsescore

# Redis
REDIS_URL=redis://localhost:6379/0

# S3-Compatible Storage
S3_ENDPOINT=https://s3.eu-west-2.amazonaws.com
S3_BUCKET=parsescore-cvs
S3_ACCESS_KEY=your-access-key
S3_SECRET_KEY=your-secret-key
S3_REGION=eu-west-2

# Data Handling
# PERSIST_DEFAULT: Set to 'true' to save all parsed CVs to database by default
# Set to 'false' for privacy (CVs only saved if persist=true in request)
PERSIST_DEFAULT=true
RETURN_RAW_TEXT=false
DATA_REGION=UK

# LLM Configuration
LLM_PROVIDER=openai
LLM_API_KEY=sk-your-api-key-here
LLM_ENABLED=false
LLM_MODEL=gpt-4

# Observability
LOG_LEVEL=INFO
ENABLE_METRICS=true

# Security (comma-separated origins)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000