# App Configuration
APP_ENV=development
APP_SECRET=your-secret-key-here-change-in-production
API_VERSION=0.1.0

# Rate Limiting
API_RATE_RPM=60
API_RATE_BURST=120

# File Upload Limits
MAX_FILE_MB=5
MAX_PAGES=12

# Timeouts (seconds)
PARSE_TIMEOUT_S=5
SCORE_TIMEOUT_S=3
LLM_TIMEOUT_S=10

# Database (PostgreSQL)
DATABASE_URL=postgresql+psycopg://user:password@localhost:5432/parsescore

# Redis
REDIS_URL=redis://localhost:6379/0

# S3-Compatible Storage
S3_ENDPOINT=https://s3.eu-west-2.amazonaws.com
S3_BUCKET=parsescore-cvs
S3_ACCESS_KEY=your-access-key
S3_SECRET_KEY=your-secret-key
S3_REGION=eu-west-2

# Data Handling
PERSIST_DEFAULT=false
RETURN_RAW_TEXT=false
DATA_REGION=UK

# LLM Configuration
LLM_PROVIDER=openai  # "openai" or "anthropic"
LLM_API_KEY=sk-your-api-key-here  # OpenAI API key or Anthropic API key
LLM_ENABLED=false  # Set to true to enable LLM-enhanced scoring
LLM_MODEL=gpt-4o-mini  # gpt-4o-mini, gpt-4o, or claude-3-5-sonnet-20241022

# Observability
LOG_LEVEL=INFO
ENABLE_METRICS=true

# Security (comma-separated origins)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000

# Development API Key (auto-generated on first run)
# DEV_API_KEY=ps_...
